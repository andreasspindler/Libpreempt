#!/usr/bin/env bash
# -*-coding:raw-text-unix;-*-
#
# .puddingrc -- Project resource file
#
# Set global variables based on the current value of
#
#    $TestFlavor
#
# The value is set by "pudding.sh -f FLAVOR".
#
TestTarget='Libpreempt'

case ${TestFlavor}
in
  std)
    Tests=($(find_tests $TestDir 'std_*.cpp'))
    ;;
  sched)
    Tests=($(find_tests $TestDir 'sched_*.cpp'))
    ;;
  parinama)
    #
    # parinama is a Sanskrit word and means development, change
    #
    ;&
  develop)
    Tests=($(find_tests $TestDir 'task_02*.cpp'))
    ;;
esac

