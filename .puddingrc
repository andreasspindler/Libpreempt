#!/usr/bin/env bash
# -*-coding:raw-text-unix;-*-
#
# .puddingrc -- Project resource file
#
Name='Libpreempt'

case ${Configuration}
in
  base)   Tests=($(find_tests $InDir 'base_*.cpp'));;
  std)    Tests=($(find_tests $InDir 'std_*.cpp'));;
  sched)  Tests=($(find_tests $InDir 'sched_*.cpp'));;
  firm*)  Tests=($(find_tests $InDir 'firmware_*.cpp'));;
  parinama)                     # Sanskrit: development, change
    Tests=($(find_tests $InDir "preempt_*.cpp"))
    Standards=(c++17)
    Make=(make -j4)
    CC+=(-fmax-errors=2)
    ;;
esac
