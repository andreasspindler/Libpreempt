#!/usr/bin/env bash
# -*-coding:raw-text-unix;-*-
#
# .puddingrc -- Project resource file
#
Name='Libpreempt'

case ${Configuration}
in
  std)
    Tests=($(find_tests $InDir 'std_*.cpp'))
    ;;
  sched)
    Tests=($(find_tests $InDir 'sched_*.cpp'))
    ;;
  stress)
    ;;
  parinama)                     # Sanskrit: development, change
    Tests=($(find_tests $InDir 'task_03*.cpp'))
    Standards=(c++17)
    Make=(make -j1)
    CC+=(-fmax-errors=3)
    ;;
  1|2)
    Tests=($(find_tests $InDir 'firmware_0$Configuration.cpp'))
    Standards=(c++14 c++17)
    ;;
esac
