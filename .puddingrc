#!/usr/bin/env bash
# -*-coding:raw-text-unix;-*-
#
# .puddingrc -- Project resource file
#
# The purpose of this file is to set global variables based on the
# current value of
#
#    $TestFlavor
#
# The value is set to -c NAME argument passed to "pudding.sh"
#
TestTarget='Libpreempt'

case ${TestFlavor}
in
  std)
    Tests=($(find_tests $TestDir 'std_*.cpp'))
    ;;
  sched)
    Tests=($(find_tests $TestDir 'sched_*.cpp'))
    ;;
  develop|parinama)
    #
    # use this when developing/debugging a single test
    #
    # parinama is a Sanskrit word and means development, change
    #
    Tests=($(find_tests $TestDir 'sched_03*.cpp'))
    ;;
esac

